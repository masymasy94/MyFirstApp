<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewGeneraNegozi2"
        android:layout_width="match_parent"
        android:layout_height="518dp"
        android:scrollbars="vertical"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/scrollview2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.366"
        tools:layout_editor_absoluteX="0dp" />

    <HorizontalScrollView
        android:id="@+id/scrollview2"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="597dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn1"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbuttonlight"
                android:onClick="generaNegozioPrincipiantePortrait2"
                android:text="genera negozio Principiante" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbuttonlight"
                android:onClick="generaNegozioPrincipiantePortrait2"
                android:text="genera negozio avanzato" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbuttonlight"
                android:onClick="generaNegozioPrincipiantePortrait2"
                android:text="genera negozio XXXXX" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbuttonlight"
                android:onClick="generaNegozioPrincipiantePortrait2"
                android:text="genera negozio XXXXX" />


        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>